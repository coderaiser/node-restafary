{
  "name": "restafary",
  "version": "3.1.3",
  "description": "REST for CRUD file operations",
  "main": "server/restafary.js",
  "engines": {
    "node": ">=4"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "scripts": {
    "test": "tape 'test/*.js'",
    "report": "nyc report --reporter=text-lcov | coveralls",
    "coverage": "nyc npm test",
    "watch:test": "npm run watcher -- npm test",
    "watch:lint": "npm run watcher -- 'npm run lint'",
    "watcher": "nodemon -w test -w server --exec",
    "compile:client": "babel client -d legacy/client",
    "build-progress": "webpack --progress",
    "build:client": "npm run build-progress -- --mode production",
    "build:client:dev": "NODE_ENV=development npm run build-progress -- --mode development",
    "build": "redrun clean legacy:* compile:* build:*",
    "wisdom": "npm run build compile:*",
    "lint": "redrun lint:*",
    "lint:client": "eslint --env browser client",
    "lint:server": "eslint server test",
    "clean": "rimraf dist* legacy",
    "legacy:dir": "mkdirp legacy/client",
    "legacy:index": "echo \"module.exports = require('./restafary')\" > legacy/client/index.js"
  },
  "dependencies": {
    "ashify": "^1.0.0",
    "beautifile": "^2.0.0",
    "checkup": "^1.3.0",
    "es6-promisify": "^6.0.0",
    "files-io": "^2.0.0",
    "flop": "^4.0.0",
    "jonny": "^2.0.3",
    "mellow": "^2.0.0",
    "minify": "^3.0.2",
    "patchfile": "^1.0.0",
    "ponse": "^2.0.0",
    "pullout": "^2.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "eslint": "^5.0.0",
    "eslint-plugin-node": "^6.0.1",
    "express": "^4.13.4",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.11.0",
    "nyc": "^12.0.2",
    "pipe": "^1.1.0",
    "redrun": "^6.0.0",
    "request": "^2.79.0",
    "sinon": "^6.0.0",
    "sinon-called-with-diff": "^2.0.0",
    "tape": "^4.5.1",
    "try-to-catch": "^1.0.2",
    "webpack": "^4.1.0",
    "webpack-cli": "^3.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/coderaiser/node-restafary.git"
  },
  "keywords": [
    "rest",
    "crud",
    "files",
    "middleware"
  ],
  "author": "coderaiser <mnemonic.enemy@gmail.com> (http://coderaiser.github.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/coderaiser/node-restafary/issues"
  },
  "homepage": "https://github.com/coderaiser/node-restafary"
}
